{ 
    "manifest_version": 2,
    "name": "blankify",
    "version": "1.0",
    
    "description": "Adds a browser action to the toolbar. Click the button to remove the active tab's content.",
    "homepage_url": "https://github.com/acoomes/blankify",
    "icons": {
        "48": "icons/blankify-48.png"
    },
    
    "permissions": [
        "activeTab"
    ],

    "browser_action": {
        "default_icon": "icons/blankify-48.png",
        "default_title": "Blankify",
    }
}